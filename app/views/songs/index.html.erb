<h1>Listing songs</h1>

<table>
  <tr>
    <th>Url</th>
    <th>User</th>
    <th>Score</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @songs.each do |song| %>
  <tr>
    <td><%= song.url %></td>
		<td><%= User.where(:uid => song.parent_id).first.email %></td>
    <td><%= song.up_vote - song.down_vote %></td>
    <td><%= link_to 'Show', song %></td>
    <td><%= link_to 'Edit', edit_song_path(song) %></td>
    <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

